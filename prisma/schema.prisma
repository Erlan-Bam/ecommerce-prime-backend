generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  EDITOR
  ADMIN
}

enum BonusType {
  INCREASE
  DECREASE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  isBanned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bonuses   Bonus[]
}

model Bonus {
  id        Int      @id @default(autoincrement())
  userId    String   
  amount    Decimal
  type      BonusType
  user      User     @relation(fields: [userId], references: [id])
}